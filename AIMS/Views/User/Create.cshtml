<!-- User Create View -->

@model Users

@{
	ViewData["Title"] = "Create New User";
}

<div class="container-fluid px-3 py-4">
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 col-lg-6">
			<h1 class="mb-4 text-center">Create New User</h1>
			<form method="post">
				<div class="mb-3">
					<label asp-for="FirstName" class="form-label">First Name <span aria-label="required">*</span></label>
					<input required class="form-control" asp-for="FirstName" />
				</div>
				<div class="mb-3">
					<label asp-for="LastName" class="form-label">Last Name <span aria-label="required">*</span></label>
					<input required class="form-control" asp-for="LastName" />
				</div>
				<div class="mb-3">
					<label asp-for="Email" class="form-label">Email <span aria-label="required">*</span></label>
					<input required class="form-control" asp-for="Email" />
				</div>
				<div class="mb-3">
					<label asp-for="UserPassword" class="form-label">User Password <span aria-label="required">*</span></label>
					<input required class="form-control" asp-for="UserPassword" />
				</div>
				<div class="mb-3">
					<label asp-for="Branch" class="form-label">Branch <span aria-label="required">*</span></label>
					<select required class="form-select" asp-for="Branch">
						<option value="" disabled selected>Select a branch</option>
						<option value="Sheffield">Sheffield</option>
						<option value="London">London</option>
						<option value="Derby">Derby</option>
					</select>
				</div>
				<div class="mb-3">
					<label asp-for="Role" class="form-label">Role <span aria-label="required">*</span></label>
					<select required class="form-select" asp-for="Role">
						<option value="" disabled selected>Select a Role</option>
						<option value="Admin">Admin</option>
						<option value="Manager">Manager</option>
						<option value="Associate">Associate</option>
					</select>
				</div>
				<div class="d-flex justify-content-between mt-4">
					<a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
					<button type="submit" class="btn btn-dark">Create User</button>
				</div>
			</form>
		</div>
	</div>
</div>