<!-- User Edit View -->

@model Users

@{
	ViewData["Title"] = "Update Users Detail";
}

<div class="container-fluid px-3 py-4">
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 col-lg-6">
			<h1>Edit Product</h1>
			<form method="post">
				<div class="mb-3">
					<label asp-for="FirstName" class="form-label">First Name</label>
					<input class="form-control" asp-for="FirstName" />
				</div>
				<div class="mb-3">
					<label asp-for="LastName" class="form-label">Last Name</label>
					<input class="form-control" asp-for="LastName" />
				</div>
				<div class="mb-3">
					<label asp-for="Email" class="form-label">Email</label>
					<input class="form-control" asp-for="Email" />
				</div>
				<div class="mb-3">
					<label asp-for="UserPassword" class="form-label">User Password</label>
					<input class="form-control" asp-for="UserPassword" />
				</div>
				<div class="mb-3">
					<label asp-for="Branch" class="form-label">Branch</label>
					<select class="form-select" asp-for="Branch">
						<option value="" disabled selected>Select a branch</option>
						<option value="Sheffield">Sheffield</option>
						<option value="London">London</option>
						<option value="Derby">Derby</option>
					</select>
				</div>
				<div class="mb-3">
					<label asp-for="Role" class="form-label">Role</label>
					<select class="form-select" asp-for="Role">
						<option value="" disabled selected>Select a Role</option>
						<option value="Admin">Admin</option>
						<option value="Manager">Manager</option>
						<option value="Associate">Associate</option>
					</select>
				</div>
				<div class="mb-3">
					<label asp-for="UpdatedDate">Updated Date</label>
					<input class="form-control" asp-for="UpdatedDate" type="date" />
					<span asp-validation-for="UpdatedDate" class="text-danger"></span>
				</div>
				<div class="d-flex justify-content-between mt-4">
					<a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
					<button type="submit" class="btn btn-dark">Update User</button>
				</div>


			</form>
		</div>
	</div>
</div>


