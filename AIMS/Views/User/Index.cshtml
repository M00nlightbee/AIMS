<!-- User Index View -->
@model IEnumerable<AIMS.Models.Users>

@{
    ViewData["Title"] = "User Control";
    var userAdded = TempData["UserAdded"] as bool?;
}

<div class="container-fluid px-3 py-4">
    <div class="row justify-content-center">
        <section class="inventory-table mt-4">
            <h2 class="mb-4 text-center">User control</h2>
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search by name..." oninput="filterUserTable()">
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="branchFilter" onchange="filterUserTable()">
                        <option value="">Branch</option>
                        <option value="Sheffield">Sheffield</option>
                        <option value="London">London</option>
                        <option value="Derby">Derby</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="roleFilter" onchange="filterUserTable()">
                        <option value="">Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Branch Manager</option>
                        <option value="Associate"> Sales Associate</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-dark w-100" asp-action="Create">+ New User</a>
                </div>
            </div>
        </section>

        <!-- User Table -->
        <section class="inventory-table mt-4" id="user-table-flex">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Branch</th>
                        <th>Role</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    @if (Model == null)
                    {
                        <tr>
                            <td colspan="6" class="text-center">No Model Data</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.FirstName</td>
                                <td>@p.LastName</td>
                                <td>@p.Branch</td>
                                <td>@p.Role</td>
                                <td>@p.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.UserId">✎ Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.UserId">🗑 Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="userAddedModal" tabindex="-1" aria-labelledby="userAddedModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userAddedModalLabel">User Added</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                A new user has been successfully added.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="~/js/site.js"></script>

<script>
    @if (userAdded == true)
    {
        <text>
        document.addEventListener('DOMContentLoaded', (event) => {
            showUserAddedModal();
        });
        </text>
    }
</script>

