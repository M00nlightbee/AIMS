<!-- Inventory Create View -->
@model Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="col-md-10 ms-sm-auto px-md-4 scrollable-container">
    <h1>Create Product</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="ProductName">Product Name <span aria-label="required">*</span></label>
            <input required class="form-control" asp-for="ProductName" />
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription">Description<span aria-label="required">*</span></label>
            <textarea asp-for="ProductDescription" required class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ProductSize">Size <span aria-label="required">*</span></label>
            <select required class="form-select" asp-for="ProductSize">
                <option value="" disabled selected>Select a size</option>
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
                <option value="XXL">XXL</option>
                <option value="ONE SIZE">ONE SIZE</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Quantity">Quantity <span aria-label="required">*</span></label>
            <input required class="form-control" asp-for="Quantity" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price <span aria-label="required">*</span></label>
            <input required class="form-control" asp-for="Price" />
        </div>
        <div class="form-group">
            <label asp-for="Branch">Branch <span aria-label="required">*</span></label>
            <select required class="form-select" asp-for="Branch">
                <option value="" disabled selected>Select a branch</option>
                <option value="Sheffield">Sheffield</option>
                <option value="London">London</option>
                <option value="Derby">Derby</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Category">Category<span aria-label="required">*</span></label>
            <select required class="form-select" asp-for="Category">
                <option value="" disabled selected>Select a category</option>
                <option value="Clothing">Clothing</option>
                <option value="Accessories">Accessories</option>
                <option value="Hats">Hats</option>
            </select>
        </div>
        <div class="text-center panel-body">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-sm btn-dark">Create Product</button>
        </div>
    </form>
</div>
