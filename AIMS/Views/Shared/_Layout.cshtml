﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
            <div class="container-fluid">
                <h1 class="navbar-brand">AIMS</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarNav" aria-controls="sidebarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="sidebarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Product" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Inventory" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Inventory" asp-action="Index">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Order" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Order" asp-action="Index">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "History" && currentAction == "Index" ? "active" : "text-light")" asp-controller="History" asp-action="Index">History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "User" && currentAction == "Index" ? "active" : "text-light")" asp-controller="User" asp-action="Index">User Control</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Home" asp-action="Index">Analytics</a>
                        </li>
                    </ul>
                    <form class="d-flex" method="post" asp-controller="Login" asp-action="Logout">
                        <button class="btn btn-warning">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="ms-sm-auto px-md-4 border-top footer text-muted ">
        <div class="container-fluid px-3 py-4">
            <div class="row justify-content-center">
				<p>&copy; 2024 - AIMS - All Rights Reserved</p>
            </div>
		</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>