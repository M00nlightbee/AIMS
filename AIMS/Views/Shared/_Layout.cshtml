<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <!-- Top Navbar -->
        <nav class="navbar navbar-dark bg-dark d-md-none fixed-top px-3">
            <button class="btn btn-outline-light" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <span class="navbar-brand mb-0 h1">AIMS</span>
        </nav>

        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white p-3">
            <h2 class="text-center d-none d-md-block py-3">AIMS</h2>

            <ul class="nav flex-column" id="sidebarMenu">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                }

                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "Product" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-box-seam"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "Order" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Order" asp-action="Index">
                        <i class="bi bi-cart"></i> Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "History" && currentAction == "Index" ? "active" : "text-light")" asp-controller="History" asp-action="Index">
                        <i class="bi bi-clock-history"></i> History
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "Inventory" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Inventory" asp-action="Index">
                        <i class="bi bi-archive"></i> Inventory
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "User" && currentAction == "Index" ? "active" : "text-light")" asp-controller="User" asp-action="Index">
                        <i class="bi bi-people"></i> User Control
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(currentController == "Home" && currentAction == "Index" ? "active" : "text-light")" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-graph-up"></i> Analytics
                    </a>
                </li>
            </ul>

            <form method="post" asp-controller="Login" asp-action="Logout" class="mt-3">
                <button class="btn btn-warning w-100 d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid px-3 py-4">
        <div class="row justify-content-center">
            <footer class="footer text-muted text-center border-top py-4">
                <p>&copy; 2024 - AIMS - All Rights Reserved</p>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function() {
            document.querySelector(".sidebar").classList.toggle("show");
        });
    </script>

</body>
</html>