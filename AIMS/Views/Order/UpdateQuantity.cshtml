@model Orders
@{
	ViewData["Title"] = "Update Item Quantity";
}

<div class="col-md-10 ms-sm-auto px-md-4">
    <form method="post" asp-action="UpdateQuantity" asp-controller="Order">
        <div class="form-group">
            <label asp-for="OrderQuantity">Order Quantity:</label>
            <input asp-for="OrderQuantity" class=" form-control" type="number" min="1" />
        </div>
        <button class="btn btn-dark btn-sm" type="submit">Update</button>
    </form>
</div>
