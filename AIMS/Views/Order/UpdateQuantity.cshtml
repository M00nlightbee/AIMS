<!-- Update Order quantity View -->

@model Orders

@{
	ViewData["Title"] = "Update Item Quantity";
}

<div class="container-fluid px-3 py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form method="post" asp-action="UpdateQuantity" asp-controller="Order">
                <div class="mb-3">
                    <label asp-for="OrderQuantity" class="form-label">Order Quantity:</label>
                    <input asp-for="OrderQuantity" class=" form-control" type="number" min="1" />
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-dark" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>