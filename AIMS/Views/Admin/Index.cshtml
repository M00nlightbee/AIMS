@model List<AIMS.Models.Users>
@{
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<h2>Users</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>UserId</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Branch</th>
            <th>Role</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Branch</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateUser" class="btn btn-primary">Create User</a>
