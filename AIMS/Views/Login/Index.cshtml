@{
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
    var loggedOut = TempData["LoggedOut"] as bool?;
}

<div class="container-fluid px-3 py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow p-4" style="width: 400px; margin: auto;">
                <h2 class="text-center mb-4">Welcome to AIMS</h2>
                <form method="post" asp-action="Index">
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="loggedOutModal" tabindex="-1" aria-labelledby="loggedOutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loggedOutLabel">Logged Out</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Successfully Logged Out.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>

<script>

    // Check if the user has logged out and show the modal
    @if (loggedOut == true)
    {
            <text>
                document.addEventListener('DOMContentLoaded', (event) => {
                        showLoggedOutModal();
                });
            </text>
    }

</script>


